package com.jsp.Servicelayer;

import java.util.List;

import com.jsp.DAO.EmployeeDAO;
import com.jsp.Entity.Emp;



public class EmployeeService {
	private EmployeeDAO dao = new EmployeeDAO();

	public void addEmployee(String name, String department, double salary) {
		dao.save(new Emp(name, department, salary));
	}

	public Emp getEmployee(int id) {
		return dao.findById(id);
	}

	public List<Emp> getAllEmployees() {
		return dao.findAll();
	}

	public void updateEmployee(int id, String name, String department, double salary) {
		Emp emp = dao.findById(id);
		if (emp != null) {
			emp.setName(name);
			emp.setDepartment(department);
			emp.setSalary(salary);
			dao.update(emp);
		}
	}

	public void deleteEmployee(int id) {
		dao.delete(id);
	}
}
