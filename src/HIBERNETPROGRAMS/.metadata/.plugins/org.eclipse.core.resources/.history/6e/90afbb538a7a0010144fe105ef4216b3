package com.jsp.DAO;
import java.util.List;

import com.jsp.Entity.Emp;


import jakarta.persistence.EntityManager;
import jakarta.persistence.EntityManagerFactory;
import jakarta.persistence.Persistence;

public class EmployeeDAO {
	private EntityManagerFactory emf = Persistence.createEntityManagerFactory("EmployeePU");

	public void save(Emp emp) {
		EntityManager em = emf.createEntityManager();
		em.getTransaction().begin();
		em.persist(emp);
		em.getTransaction().commit();
		em.close();
	}

	public Emp findById(int id) {
		EntityManager em = emf.createEntityManager();
		Emp emp = em.find(Emp.class, id);
		em.close();
		return emp;
	}

	public List<Emp> findAll() {
		EntityManager em = emf.createEntityManager();
		List<Emp> list = em.createQuery("FROM Employee", Emp.class).getResultList();
		em.close();
		return list;
	}

	public void update(Emp emp) {
		EntityManager em = emf.createEntityManager();
		em.getTransaction().begin();
		em.merge(emp);
		em.getTransaction().commit();
		em.close();
	}

	public void delete(int id) {
		EntityManager em = emf.createEntityManager();
		em.getTransaction().begin();
		Emp emp = em.find(Emp.class, id);
		if (emp != null) {
			em.remove(emp);
		}
		em.getTransaction().commit();
		em.close();
	}
}
