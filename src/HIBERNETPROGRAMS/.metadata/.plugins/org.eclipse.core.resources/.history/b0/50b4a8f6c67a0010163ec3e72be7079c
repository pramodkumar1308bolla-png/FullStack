package com.jsp.Utilization;

import com.jsp.Servicelayer.EmployeeService;
public class EmployeeUtilization {
	public static void main(String[] args) {
		EmployeeService service = new EmployeeService();

		// Create
		service.addEmployee("John Doe", "IT", 55000);
		service.addEmployee("Jane Smith", "HR", 45000);

		// Read
		System.out.println("All Employees: " + service.getAllEmployees());

		// Update
		service.updateEmployee(1, "John Doe", "IT", 60000);

		// Delete
		service.deleteEmployee(2);

		// Final List
		System.out.println("After Update/Delete: " + service.getAllEmployees());
	}
}
